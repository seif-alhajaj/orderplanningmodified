# =================================================
# Pokemon Card Planning application configuration
# =================================================

# Card processing time (in minutes)
VITE_CARD_PROCESSING_TIME=3

# Default work hours per day
VITE_DEFAULT_WORK_HOURS=8

# Backend configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=10000

# Employee configuration
VITE_MAX_EMPLOYEES_PER_DAY=10
VITE_BREAK_TIME_MINUTES=60

# Priority configuration
VITE_EXCELSIOR_MULTIPLIER=1.5
VITE_FASTPLUS_MULTIPLIER=1.3
VITE_FAST_MULTIPLIER=1.2
VITE_CLASSIC_MULTIPLIER=1.0

# Development mode
NODE_ENV=development
VITE_DEBUG_MODE=true

# =================================================
# Usage notes:
# - VITE_ variables are accessible in the frontend
# - Restart the server after modifying this file
# - To change the time per card, modify VITE_CARD_PROCESSING_TIME
# =================================================